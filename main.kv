#:include pipe.kv

FloatLayout:
    Background:
        id: background
        canvas.before:
            Rectangle:
                size: self.size
                pos: self.pos[0], self.pos[1]
                texture: self.sky_texture
    Image:
        id: gif
        source: 'to_left_frames.zip'
        pos: self.pos
        size_hint: None, None
        size: root.size
        allow_stretch: True
        keep_ratio: False
        size_hint_y: 1

    Label:
        id: score
        size_hint_y: None
        pos_hint: {'top': 1}
        text: "0"
        font_size: 40
    Button:
        text: "Start game"
        background_normal: "transparent.png"
        background_down: "transparent.png"
        id: start_button
        on_release:
            self.disabled = True
            self.opacity = 0
            app.start_game()
    Bird:
        source: "bird1.png"
        size_hint: None, None
        size: 46, 34
        pos: (root.width-50)/2.0, (root.height - 96)/2.0
        id: bird
